<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.facebookclone">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Facebookclone">

        <activity
            android:name=".view.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".view.register.CreateNewPasswordActivity" />

        <activity android:name=".view.register.OtpVerificationActivity"/>


        <activity
            android:name=".view.login.LoginActivity"
            android:exported="false" />

        <activity
            android:name=".view.register.RegisterBirthdayActivity">

        </activity>

        <activity android:name=".view.register.WhatYourNameActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".view.register.JoinFacebookActivity" />

        <activity android:name=".view.login.ProfileLoginActivity">

        </activity>

        <activity
            android:name=".view.register.ForgotPasswordEmailActivity">

        </activity>

        <activity
            android:name=".view.register.ForgotPasswordMobileActivity">

        </activity>

        <activity android:name=".view.register.WhatYourGenderActivity"
            android:windowSoftInputMode="adjustPan"
            />
        <activity android:name=".view.register.ContactEmailActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".view.register.ContactNumberActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".view.register.ChoosePasswordActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".view.register.TermAndPrivacyActivity" />
    </application>

</manifest>